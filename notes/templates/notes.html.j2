<html>
<head>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <script src="{{ url_for('static', filename='script.js') }}"></script>
</head>
<body>
    <h1>Notes</h1>

    <!-- Formulaire de crÃ©ation -->
    <form id="create-note-form" method="POST">
        <input type="text" name="title" placeholder="Titre" required>
        <input type="text" name="content" placeholder="Contenu" required>
        <button type="submit">Ajouter</button>
    </form>

    <div id="notes">
        {% for note in notes %}
            <div class="note {% if note.done %}done{% endif %}">
                <h2>{{ note.title }}</h2>
                <p>{{ note.content }}</p>
                <form method="POST">
                    <label for="note-{{ note.id }}">done</label>
                    <input
                        type="checkbox"
                        {% if note.done %} checked {% endif %}
                        data-id="{{ note.id }}"
                    >
                </form>
            </div>
        {% endfor %}
    </div>
</body>
</html>
